
# This workflow will build a Java project with Maven, and cache/restore any dependencies to improve the workflow execution time
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-java-with-maven

# This workflow uses actions that are not certified by GitHub.
# They are provided by a third-party and are governed by
# separate terms of service, privacy policy, and support
# documentation.

name: Java CI with Maven

on:
  workflow_dispatch:  # Manually triggered workflow

permissions:
  contents: read
  pages: write

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Set up JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: maven
    - name: Build with Maven
      run: mvn clean test

    - name: Publish TestNG Report 
      uses: mikepenz/action-junit-report@v2 
      if: always()
      with:
        path: '**/target/surefire-reports/testng-results.xml' 
        report_name: UI TestNG Report 

    - name: Upload Extent Report 
      uses: actions/upload-artifact@v2 
      with:
        name: extent-report
        path: target/extentReport/Spark.html

    # Note the new step using JamesIves/github-pages-deploy-action@4.1.5
    - name: Deploy
      uses: JamesIves/github-pages-deploy-action@4.1.5
      with:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        BRANCH: gh-pages
        FOLDER: target/Extent_Reports
        CLEAN: true
        COMMIT_MESSAGE: 'Deployed Extent Reports'
